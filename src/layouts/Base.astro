---
import BaseHead from "@/components/BaseHead.astro";
import SkipLink from "@/components/SkipLink.astro";
import ThemeProvider from "@/components/ThemeProvider.astro";
import Footer from "@/components/layout/Footer.astro";
import Header from "@/components/layout/Header.astro";
import { siteConfig } from "@/site.config";
import type { SiteMeta } from "@/types";

interface Props {
	meta: SiteMeta;
}

const {
	meta: { articleDate, description = siteConfig.description, ogImage, title },
} = Astro.props;
---

<html class="scroll-smooth" lang={siteConfig.lang} transition:animate="none">
	<head>
<BaseHead articleDate={articleDate} description={description} ogImage={ogImage} title={title} />

<meta name="view-transition" content="same-origin" />
<meta name="google-site-verification" content="IROpR4td_dUwU-4vr9Do8j8F2mYYqsx2ls4YjLhixC8" />

<!-- Preload critical resources -->
<link rel="preload" href="/src/assets/roboto-mono-regular.ttf" as="font" type="font/ttf" crossorigin />
<link rel="preload" href="/src/assets/roboto-mono-700.ttf" as="font" type="font/ttf" crossorigin />
		<!-- Cloudflare Web Analytics -->
		<script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "3bf2ad8b7cde48938f7a1afd68bd2613"}'></script>
		<!-- End Cloudflare Web Analytics -->
	</head>
	<body
		class="bg-global-bg text-global-text mx-auto flex min-h-screen max-w-3xl flex-col px-4 pt-16 font-mono text-sm font-normal antialiased sm:px-8" transition:animate="slide"
	>
		<ThemeProvider />
		<SkipLink />
		<Header />
		<main id="main">
			<slot />
		</main>
		<Footer />
	</body>
</html>
